<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/disease_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textSize="22dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/news_detail_margin"
            android:layout_marginRight="@dimen/news_detail_margin"
            android:background="#999999"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/disease_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textSize="22dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/news_detail_margin"
            android:layout_marginRight="@dimen/news_detail_margin"
            android:background="#999999"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/disease_detail_drugs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textSize="22dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/news_detail_margin"
            android:layout_marginRight="@dimen/news_detail_margin"
            android:background="#999999"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/disease_detail_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textSize="22dip" />
    </LinearLayout>

</ScrollView>